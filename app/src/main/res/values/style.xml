<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryDark">@color/pink_medium</item>
        <item name="colorAccent">@color/blue_dark</item>
        <item name="android:windowBackground">@color/pink_light</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="songName">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="singerText">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="time">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8sp</item>
    </style>
    
    <style name="inputText">
        <item name="android:textColor">#3A4164</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:background">@drawable/text_input</item>
    </style>

    <style name="buttonText">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>